<nav class="pagination">
    {{#if prev}}
    <a class="newer-posts" href="{{page_url prev}}">Previous :: </a>
    {{else}}
    <a class="newer-posts hidden">Previous :: </a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
    <a class="older-posts" href="{{page_url next}}"> :: Next</a>
    {{else}}
    <a class="newer-posts hidden"> :: Next</a>
    {{/if}}
</nav>   